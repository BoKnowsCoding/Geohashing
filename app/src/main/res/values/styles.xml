<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Blue" parent="Blue.Base">

    </style>

    <style name="Green" parent="Green.Base">

    </style>

    <style name="Red" parent="Red.Base">

    </style>
    <style name="Blackout" parent="Blackout.Base">

    </style>

    <!-- Default theme. -->

    <style name="Green.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_materiallight</item>
        <item name="colorPrimaryDark">@color/primary_darkmaterial_light</item>
        <item name="colorAccent">@color/accent_materiallight</item>
        <item name="android:textColorPrimary">@color/accent_materiallight</item>
        <item name="android:textColorSecondaryInverse">@color/accent_materiallight</item>
        <item name="android:textColorSecondary">@color/accent_materiallight</item>

    </style>

    <style name="Blue.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/holo_blueBright</item>
        <item name="colorPrimaryDark">@color/holo_blueDark</item>
        <item name="colorAccent">@color/holo_blueLight</item>
        <item name="android:textColorPrimary">@color/holo_blueBright</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorSecondaryInverse">@color/holo_blueBright</item>
        <item name="android:textColorSecondary">@color/holo_blueBright</item>


    </style>


    <style name="Red.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">#000000</item>
        <item name="colorPrimary">@color/primary_materialdark</item>
        <item name="colorPrimaryDark">@color/primary_dark_materialdark</item>
        <item name="colorAccent">@color/accent_materialdark</item>
        <item name="android:textColorPrimary">@color/accent_materialdark</item>
        <item name="android:textColorSecondaryInverse">@color/accent_materialdark</item>
        <item name="android:textColorSecondary">@color/accent_materialdark</item>

    </style>


    <style name="Blackout.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/holo_blueBright</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/holo_blueBright</item>
        <item name="android:textColorSecondary">@color/holo_blueBright</item>
        <item name="colorAccent">@color/holo_blueLight</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/foreground_materiallight</item>
    </style>




</resources>